{
  "codeLens.enable": true,
  "languageserver": {
    "elixirLS": {
      "command": "~/src/elixir-ls/release/language_server.sh",
      "filetypes": ["elixir", "eelixir"],
      "rootPatterns": ["mix.exs"],
      "settings": {
        "elixirLS": {
          "dialyzerEnabled": false,
          "fetchDeps": false
        }
      }
    }
  }
}
